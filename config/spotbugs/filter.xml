<FindBugsFilter>
    <!-- Ignore all test files. -->
    <Match>
        <Class name="~Test\.java$"/>
    </Match>

    <!--  This is copy of Log4j's formatter.  -->
    <Match>
        <Class name="software.amazon.smithy.java.logging.ParameterFormatter$StringBuilders"/>
    </Match>

    <!-- Excessive Defensive copies. -->
    <Match>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>

    <Match>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Excessive Defensive checks on constructor exceptions. -->
    <Match>
        <Bug pattern="CT_CONSTRUCTOR_THROW"/>
    </Match>

    <!-- JSON iter false positives -->
    <Match>
        <Bug pattern="SA_FIELD_SELF_ASSIGNMENT"/>
        <Class name="software.amazon.smithy.java.runtime.json.jsoniter.internal.IterImplForStreaming"/>
    </Match>
    <Match>
        <Bug pattern="ICAST_INTEGER_MULTIPLY_CAST_TO_LONG"/>
        <Class name="software.amazon.smithy.java.runtime.json.jsoniter.internal.IterImpl"/>
    </Match>
</FindBugsFilter>
